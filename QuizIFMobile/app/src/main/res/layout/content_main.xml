<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.MainActivity"
    tools:showIn="@layout/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"

            android:text="Ao entrar pela primeira vez no aplicativo, é necessário informar o IP do servidor!"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="IP do servidor"
            android:id="@+id/etIPServ"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRAVAR"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/btGravarIPServ"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Tentando se conectar ao servidor..."
            android:textSize="15pt"
            android:textAlignment="center"
            android:visibility="invisible"
            android:id="@+id/tvTentandoConectar"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>